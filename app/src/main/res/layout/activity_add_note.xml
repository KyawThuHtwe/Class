<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Note.AddNoteActivity">
    <LinearLayout
        android:background="@color/colorCardView"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp">
            <LinearLayout
                android:background="@android:color/white"
                android:gravity="center"
                android:layout_gravity="center_vertical|center"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/back"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/action" />
                <TextView
                    android:textColor="@color/colorTextPrimary"
                    android:id="@+id/title_action"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:paddingLeft="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textSize="@dimen/_14ssp"
                    android:text="@string/add_note"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    tools:ignore="RtlSymmetry" />
                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/save"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    tools:ignore="UseCompoundDrawables">
                    <ImageView
                        android:tint="@color/colorTextPrimary"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="UseAppTint"
                        android:contentDescription="@string/action" />
                    <TextView
                        android:textColor="@color/colorTextPrimary"
                        android:id="@+id/action"
                        android:textSize="@dimen/_14ssp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:padding="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@drawable/action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:tint="@color/colorTime"
                android:id="@+id/date_icon"
                android:src="@drawable/ic_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="UseAppTint"
                android:contentDescription="@string/action" />
            <TextView
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_12ssp"
                android:paddingLeft="5dp"
                android:layout_gravity="center_vertical"
                android:text="@string/_00_00_0000"
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <LinearLayout
            android:padding="@dimen/_10sdp"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:tint="@color/colorTime"
                android:id="@+id/time_icon"
                android:src="@drawable/ic_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="UseAppTint"
                android:contentDescription="@string/action" />
            <TextView
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_12ssp"
                android:paddingLeft="5dp"
                android:layout_gravity="center_vertical"
                android:text="@string/_00_00"
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <EditText
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_12ssp"
            android:textColorHint="@color/colorTextHint"
            android:layout_margin="@dimen/_5sdp"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/action"
            android:hint="@string/title"
            android:autofillHints="@string/title"
            android:inputType="text" />

        <EditText
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_12ssp"
            android:textColorHint="@color/colorTextHint"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/action"
            android:gravity="start|top"
            android:id="@+id/subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/subject"
            android:autofillHints="@string/subject"
            android:inputType="text" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
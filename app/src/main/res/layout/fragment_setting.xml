<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.SettingFragment">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UselessParent">
                <androidx.cardview.widget.CardView
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="@dimen/_14ssp"
                            android:padding="@dimen/_10sdp"
                            android:textColor="@color/colorTextPrimary"
                            android:text="@string/developed_by"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <View
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@color/colorTextHint"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1ssp"/>

                        <LinearLayout
                            android:gravity="center_vertical"
                            android:padding="15dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:scaleType="centerCrop"
                                android:src="@mipmap/ic_launcher"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:contentDescription="@string/app_name" />
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                tools:ignore="RtlHardcoded">
                                <TextView
                                    android:padding="2dp"
                                    android:textSize="@dimen/_12ssp"
                                    android:text="@string/kyaw_thu"
                                    android:textColor="@color/colorTextPrimary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:id="@+id/email"
                                        android:padding="2dp"
                                        android:textSize="@dimen/_12ssp"
                                        android:text="@string/copypaste673_gmail_com"
                                        android:textColor="@color/colorTextPrimary"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        tools:ignore="TooDeepLayout" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="@dimen/_12ssp"
                                android:layout_weight="1"
                                android:padding="15dp"
                                android:text="@string/build_app_13_8_2020"
                                android:textColor="@color/colorTextPrimary"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:textSize="@dimen/_12ssp"
                                android:gravity="center"
                                android:padding="15dp"
                                android:text="@string/version_1"
                                android:textColor="@color/colorTextPrimary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textSize="@dimen/_14ssp"
                            android:padding="@dimen/_10sdp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="@+id/bg"
                            android:paddingLeft="@dimen/_10sdp"
                            android:textColor="@color/colorTextPrimary"
                            android:text="@string/setting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/_10sdp"
                            tools:ignore="RtlSymmetry" />
                        <View
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@color/colorTextHint"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1ssp"/>
                        <RelativeLayout
                            android:focusable="true"
                            android:clickable="true"
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_centerVertical="true"
                                android:id="@+id/widget1"
                                android:padding="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_widget"
                                android:contentDescription="@string/app_name" />
                            <TextView
                                android:textColor="@color/colorTextPrimary"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/widget1"
                                android:paddingRight="5dp"
                                android:textSize="@dimen/_12ssp"
                                android:text="@string/widget"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/widget1"
                                android:paddingEnd="5dp"
                                tools:ignore="RelativeOverlap,RtlSymmetry" />
                            <Switch
                                android:enabled="false"
                                android:checked="true"
                                android:id="@+id/widget_switch"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                tools:ignore="UseSwitchCompatOrMaterialXml" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:focusable="true"
                            android:clickable="true"
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_centerVertical="true"
                                android:id="@+id/theme1"
                                android:padding="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_color"
                                android:contentDescription="@string/app_name" />
                            <TextView
                                android:textColor="@color/colorTextPrimary"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/theme1"
                                android:paddingRight="5dp"
                                android:textSize="@dimen/_12ssp"
                                android:text="@string/theme"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/theme1"
                                android:paddingEnd="5dp"
                                tools:ignore="RtlSymmetry" />
                            <View
                                android:layout_marginRight="@dimen/_5sdp"
                                android:background="@color/colorPrimary"
                                android:id="@+id/theme_color"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_alignParentEnd="true"
                                tools:ignore="RtlHardcoded,UseSwitchCompatOrMaterialXml" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/database_list"
                            android:focusable="true"
                            android:clickable="true"
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_centerVertical="true"
                                android:id="@+id/database"
                                android:padding="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_list"
                                android:contentDescription="@string/app_name" />
                            <TextView
                                android:textColor="@color/colorTextPrimary"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/database"
                                android:paddingRight="5dp"
                                android:textSize="@dimen/_12ssp"
                                android:text="@string/data_list"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/database"
                                android:paddingEnd="5dp"
                                tools:ignore="RtlSymmetry" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/default_database"
                            android:focusable="true"
                            android:clickable="true"
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_centerVertical="true"
                                android:id="@+id/default1"
                                android:padding="5dp"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:src="@drawable/ic_database"
                                android:contentDescription="@string/app_name"
                                app:tint="@color/colorTime" />
                            <TextView
                                android:textColor="@color/colorTextPrimary"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/default1"
                                android:paddingRight="5dp"
                                android:textSize="@dimen/_12ssp"
                                android:text="@string/default_database"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/default1"
                                android:paddingEnd="5dp"
                                tools:ignore="RtlSymmetry" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:focusable="true"
                            android:clickable="true"
                            android:id="@+id/note"
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:tint="@color/colorTime"
                                android:layout_centerVertical="true"
                                android:id="@+id/deleteNote1"
                                android:padding="5dp"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:src="@drawable/ic_database"
                                tools:ignore="UseAppTint"
                                android:contentDescription="@string/app_name" />
                            <TextView
                                android:textColor="@color/colorTextPrimary"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/deleteNote1"
                                android:paddingRight="5dp"
                                android:textSize="@dimen/_12ssp"
                                android:text="@string/note_database"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/deleteNote1"
                                android:paddingEnd="5dp"
                                tools:ignore="RtlSymmetry" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/timetable"
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:tint="@color/colorTime"
                                android:layout_centerVertical="true"
                                android:id="@+id/deleteicon1"
                                android:padding="5dp"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:src="@drawable/ic_database"
                                tools:ignore="UseAppTint"
                                android:contentDescription="@string/app_name" />
                            <TextView
                                android:textColor="@color/colorTextPrimary"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/deleteicon1"
                                android:paddingRight="5dp"
                                android:textSize="@dimen/_12ssp"
                                android:text="@string/time_database"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingEnd="5dp"
                                android:layout_toEndOf="@+id/deleteicon1"
                                tools:ignore="RtlSymmetry" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/rollcall"
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:tint="@color/colorTime"
                                android:layout_centerVertical="true"
                                android:id="@+id/deleteicon2"
                                android:padding="5dp"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:src="@drawable/ic_database"
                                tools:ignore="UseAppTint"
                                android:contentDescription="@string/app_name" />
                            <TextView
                                android:textColor="@color/colorTextPrimary"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/deleteicon2"
                                android:paddingRight="5dp"
                                android:textSize="@dimen/_12ssp"
                                android:text="@string/attendance_database"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingEnd="5dp"
                                android:layout_toEndOf="@+id/deleteicon2"
                                tools:ignore="RtlSymmetry" />
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>